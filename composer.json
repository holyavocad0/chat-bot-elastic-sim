{
    "name": "holyavocad0/chat-bot-elastic-sim",
    "description": "SilverStripe 6 project with Elasticsearch and LLM-powered chat",
    "type": "project",
    "require": {
        "php": "^8.4",
        "silverstripe/recipe-cms": "^6.0",
        "silverstripe/recipe-core": "^6.0",
        "silverstripe/vendor-plugin": "^3.0",
        "silverstripe/framework": "^6.0",
        "silverstripe/recipe-plugin": "^2.0",
        "silverstripe/admin": "^3.0",
        "silverstripe/asset-admin": "^3.0",
        "silverstripe/graphql": "^6.0",
        "elasticsearch/elasticsearch": "^8.11",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "silverstripe/recipe-testing": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src/"
        }
    },
    "extra": {
        "public-dir": "public",
        "resources-dir": "_resources",
        "project-files-installed": [
            ".htaccess",
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php",
            "behat.yml",
            "phpunit.xml.dist"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true,
            "php-http/discovery": true
        },
        "process-timeout": 600
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
